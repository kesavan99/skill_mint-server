<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{personalInfo.name}} - Resume</title>
  <style>
    /* Reset for this template only */
    #resume-executive * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    #resume-executive {
      font-family: 'Georgia', 'Times New Roman', serif;
      line-height: 1.5;
      color: #1a1a1a;
      background: #fff;
      font-size: 11pt;
    }

    #resume-executive .container {
      max-width: 750px;
      margin: 0 auto;
      padding: 50px 60px;
    }

    /* Header Section */
    #resume-executive .header {
      text-align: center;
      margin-bottom: 35px;
      padding-bottom: 20px;
      border-bottom: 2px solid #1a1a1a;
    }

    #resume-executive .header h1 {
      font-size: 28pt;
      color: #1a1a1a;
      margin-bottom: 10px;
      font-weight: 700;
      letter-spacing: 1px;
    }

    #resume-executive .contact-info {
      font-size: 10pt;
      color: #4a4a4a;
      line-height: 1.8;
    }

    #resume-executive .contact-info a {
      color: #4a4a4a;
      text-decoration: none;
    }

    /* Section Styles */
    #resume-executive .section {
      margin-bottom: 30px;
    }

    #resume-executive .section-title {
      font-size: 13pt;
      color: #1a1a1a;
      font-weight: 700;
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    /* Profile/Summary */
    #resume-executive .summary {
      color: #2a2a2a;
      font-size: 10.5pt;
      line-height: 1.7;
      margin-bottom: 20px;
      text-align: justify;
      font-style: italic;
    }

    /* Skills */
    #resume-executive .skills-section {
      margin-bottom: 25px;
    }

    #resume-executive .skills-category {
      margin-bottom: 10px;
      line-height: 1.7;
    }

    #resume-executive .skills-label {
      font-weight: 700;
      display: inline;
      margin-right: 8px;
      color: #1a1a1a;
    }

    #resume-executive .skills-list {
      display: inline;
      font-size: 10.5pt;
      color: #2a2a2a;
    }

    /* Experience */
    #resume-executive .experience-item {
      margin-bottom: 22px;
    }

    #resume-executive .experience-header {
      margin-bottom: 5px;
    }

    #resume-executive .job-title {
      font-weight: 700;
      font-size: 11.5pt;
      color: #1a1a1a;
    }

    #resume-executive .company-duration {
      font-size: 10pt;
      color: #4a4a4a;
      margin-top: 3px;
      margin-bottom: 8px;
    }

    #resume-executive .experience-item ul {
      margin-left: 25px;
      margin-top: 8px;
    }

    #resume-executive .experience-item li {
      font-size: 10.5pt;
      line-height: 1.6;
      margin-bottom: 6px;
      color: #2a2a2a;
      text-align: justify;
    }

    /* Education */
    #resume-executive .education-item {
      margin-bottom: 18px;
    }

    #resume-executive .institution {
      font-weight: 700;
      font-size: 11pt;
      color: #1a1a1a;
    }

    #resume-executive .degree-year {
      font-size: 10pt;
      color: #4a4a4a;
      margin-top: 3px;
    }

    /* Projects */
    #resume-executive .project-item {
      margin-bottom: 20px;
    }

    #resume-executive .project-name {
      font-weight: 700;
      font-size: 11pt;
      color: #1a1a1a;
      margin-bottom: 5px;
    }

    #resume-executive .project-item ul {
      margin-left: 25px;
      margin-top: 6px;
    }

    #resume-executive .project-item li {
      font-size: 10.5pt;
      line-height: 1.6;
      margin-bottom: 5px;
      color: #2a2a2a;
      text-align: justify;
    }

    /* Certifications */
    #resume-executive .cert-item {
      margin-bottom: 8px;
      font-size: 10.5pt;
      color: #2a2a2a;
      padding-left: 20px;
      position: relative;
    }

    .cert-item:before {
      content: "â—†";
      position: absolute;
      left: 0;
      color: #1a1a1a;
    }

    @media print {
      #resume-executive .page-break {
        page-break-before: always;
      }
    }
  </style>
</head>
<body>
  <div id="resume-executive">
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>{{personalInfo.name}}</h1>
      <div class="contact-info">
        {{personalInfo.phone}}<br>
        {{personalInfo.email}}{{#if personalInfo.location}} | {{personalInfo.location}}{{/if}}<br>
        {{#if personalInfo.linkedin}}{{personalInfo.linkedin}}{{/if}}
      </div>
    </div>

    <!-- Profile/Summary -->
    {{#if summary}}
    <div class="section">
      <h2 class="section-title">Executive Summary</h2>
      <p class="summary">{{summary}}</p>
    </div>
    {{/if}}

    <!-- Professional Experience -->
    {{#if experience}}
    <div class="section">
      <h2 class="section-title">Professional Experience</h2>
      {{#each experience}}
      <div class="experience-item">
        <div class="experience-header">
          <div class="job-title">{{title}}</div>
          <div class="company-duration">{{company}} | {{duration}}</div>
        </div>
        <ul>
          <li>{{description}}</li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Education -->
    {{#if education}}
    <div class="section">
      <h2 class="section-title">Education</h2>
      {{#each education}}
      <div class="education-item">
        <div class="institution">{{institution}}</div>
        <div class="degree-year">{{degree}} | {{year}}</div>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Core Competencies / Skills -->
    {{#if skills}}
    <div class="section skills-section">
      <h2 class="section-title">Core Competencies</h2>
      <div class="skills-category">
        <span class="skills-label">Technical Expertise:</span>
        <span class="skills-list">{{#each skills}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</span>
      </div>
      <div class="skills-category">
        <span class="skills-label">Leadership & Management:</span>
        <span class="skills-list">Strategic Planning, Team Building, Project Management, Stakeholder Relations</span>
      </div>
    </div>
    {{/if}}

    <!-- Projects -->
    {{#if projects}}
    <div class="section">
      <h2 class="section-title">Key Projects</h2>
      {{#each projects}}
      <div class="project-item">
        <div class="project-name">{{name}}</div>
        <ul>
          <li>{{description}}</li>
          {{#if technologies}}
          <li>Technologies: {{technologies}}</li>
          {{/if}}
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Certifications -->
    {{#if certifications}}
    <div class="section">
      <h2 class="section-title">Professional Certifications</h2>
      {{#each certifications}}
      <div class="cert-item">{{this}}</div>
      {{/each}}
    </div>
    {{/if}}
  </div>
  </div>
</body>
</html>
