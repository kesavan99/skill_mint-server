<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{personalInfo.name}} - Resume</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Times New Roman', Times, serif;
      line-height: 1.4;
      color: #000;
      background: #fff;
      font-size: 11pt;
    }

    .container {
      max-width: 750px;
      margin: 0 auto;
      padding: 0px 40px;
    }

    /* Header Section */
    .header {
      text-align: center;
    }

    .header h1 {
      font-size: 24pt;
      color: #000;
      margin-bottom: 5px;
      font-weight: 700;
      letter-spacing: 0.5px;
    }

    .contact-info {
      font-size: 10pt;
      color: #000;
    }

    .contact-info a {
      color: #000;
      text-decoration: none;
    }

    /* Section Styles */
    .section {
      margin-bottom: 20px;
    }

    .border-line{
      border-bottom: 1.5px solid #000;
      padding-bottom: 3px;
      margin-bottom: 10px;
    }

    .section-title {
      font-size: 13pt;
      padding-bottom: 8px;
      color: #000;
      font-weight: 700;
    }

    /* Profile/Summary */
    .summary {
      text-align: justify;
      color: #000;
      font-size: 10.5pt;
      line-height: 1.4;
      margin-bottom: 15px;
    }

    /* Skills */
    .skills-section {
      margin-bottom: 15px;
    }

    .skills-category {
      margin-bottom: 8px;
    }

    .skills-label {
      font-weight: 700;
      display: inline;
      margin-right: 5px;
    }

    .skills-list {
      display: inline;
      font-size: 10.5pt;
    }

    /* Experience */
    .experience-item {
      margin-bottom: 15px;
    }

    .experience-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 2px;
    }

    .job-title {
      font-weight: 700;
      font-size: 11pt;
    }

    .duration {
      font-weight: 700;
      font-size: 10.5pt;
      font-style: italic;
    }

    .company {
      font-style: italic;
      font-size: 10.5pt;
      margin-bottom: 5px;
    }

    .experience-item ul {
      margin-left: 20px;
      margin-top: 5px;
    }

    .experience-item li {
      font-size: 10.5pt;
      line-height: 1.4;
      margin-bottom: 4px;
      text-align: justify;
    }

    /* Education */
    .education-item {
      margin-bottom: 10px;
    }

    .education-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 2px;
    }

    .institution {
      font-weight: 700;
      font-size: 11pt;
    }

    .year {
      font-weight: 700;
      font-size: 10.5pt;
    }

    .degree {
      font-style: italic;
      font-size: 10.5pt;
    }

    /* Projects */
    .project-item {
      margin-bottom: 12px;
    }

    .project-name {
      font-weight: 700;
      font-size: 11pt;
      margin-bottom: 3px;
    }

    .project-item ul {
      margin-left: 20px;
      margin-top: 3px;
    }

    .project-item li {
      font-size: 10.5pt;
      line-height: 1.4;
      margin-bottom: 3px;
      text-align: justify;
    }

    /* Page break */
    @media print {
      .page-break {
        page-break-before: always;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>{{personalInfo.name}}</h1>
      <div class="contact-info">
        {{personalInfo.phone}} | Mail: <a href="mailto:{{personalInfo.email}}">{{personalInfo.email}}</a>{{#if personalInfo.linkedin}} | <a href="{{personalInfo.linkedin}}" target="_blank">LinkedIn</a>{{/if}}
      </div>
    </div>

    <!-- Profile/Summary -->
    {{#if summary}}
    <div class="section">
      <h2 class="section-title">Profile</h2>
      <div class="border-line"></div>
      <p class="summary">{{summary}}</p>
    </div>
    {{/if}}

    <!-- Skills -->
    {{#if skills}}
    <div class="section skills-section">
      <h2 class="section-title">Skills</h2>
      <div class="border-line"></div>
      <div class="skills-category">
        <span class="skills-label">Techinal Skills:</span>
        <span class="skills-list">{{#each skills}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</span>
      </div>
      <div class="skills-category">
        <span class="skills-label">Soft Skills:</span>
        <span class="skills-list">Problem-Solving, Code Optimization, Mentoring, Communication, Adaptability</span>
      </div>
    </div>
    {{/if}}

        <!-- Education -->
    {{#if education}}
    <div class="section">
      <h2 class="section-title">Education</h2>
      <div class="border-line"></div>
      {{#each education}}
      <div class="education-item">
        <div class="education-header">
          <span class="institution">{{institution}}</span>
          <span class="year">{{year}}</span>
        </div>
        <div class="degree">{{degree}}</div>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Experience -->
    {{#if experience}}
    <div class="section">
      <h2 class="section-title">Professional Experience</h2>
      <div class="border-line"></div>
      {{#each experience}}
      <div class="experience-item">
        <div class="experience-header">
          <span class="job-title">{{title}}</span>
          <span class="duration">{{duration}}</span>
        </div>
        <div class="company">{{company}}</div>
        <ul>
          <li>{{description}}</li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Projects -->
    {{#if projects}}
    <div class="section">
      <h2 class="section-title">Project</h2>
      <div class="border-line"></div>
      {{#each projects}}
      <div class="project-item">
        <div class="project-name">{{name}}</div>
        <ul>
          <li>{{description}}</li>
          {{#if technologies}}
          <li>{{technologies}}</li>
          {{/if}}
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Certifications -->
    {{#if certifications}}
    <div class="section">
      <h2 class="section-title">Certifications</h2>
      <div class="border-line"></div>
      <ul style="margin-left: 20px;">
        {{#each certifications}}
        <li style="font-size: 10.5pt; margin-bottom: 4px;">{{this}}</li>
        {{/each}}
      </ul>
    </div>
    {{/if}}
  </div>
</body>
</html>
