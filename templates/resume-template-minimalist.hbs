<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{personalInfo.name}} - Resume</title>
  <style>
    /* Reset for this template only */
    #resume-minimalist * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    #resume-minimalist {
      font-family: 'Arial', 'Helvetica', sans-serif;
      line-height: 1.6;
      color: #2c3e50;
      background: #fff;
      font-size: 11pt;
    }

    #resume-minimalist .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 60px 50px;
    }

    /* Header Section */
    #resume-minimalist .header {
      margin-bottom: 40px;
      border-bottom: 1px solid #ecf0f1;
      padding-bottom: 30px;
    }

    #resume-minimalist .header h1 {
      font-size: 32pt;
      color: #2c3e50;
      margin-bottom: 8px;
      font-weight: 300;
      letter-spacing: -0.5px;
    }

    #resume-minimalist .contact-info {
      font-size: 10pt;
      color: #7f8c8d;
      letter-spacing: 0.3px;
    }

    #resume-minimalist .contact-info a {
      color: #7f8c8d;
      text-decoration: none;
    }

    /* Section Styles */
    #resume-minimalist .section {
      margin-bottom: 35px;
    }

    #resume-minimalist .section-title {
      font-size: 11pt;
      color: #2c3e50;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      margin-bottom: 20px;
    }

    /* Profile/Summary */
    #resume-minimalist .summary {
      color: #34495e;
      font-size: 10.5pt;
      line-height: 1.7;
      margin-bottom: 15px;
    }

    /* Skills */
    #resume-minimalist .skills-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    #resume-minimalist .skill-tag {
      padding: 6px 14px;
      background: #ecf0f1;
      color: #2c3e50;
      font-size: 9.5pt;
      border-radius: 3px;
      font-weight: 500;
    }

    /* Experience */
    #resume-minimalist .experience-item {
      margin-bottom: 25px;
    }

    #resume-minimalist .experience-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 4px;
    }

    #resume-minimalist .job-title {
      font-weight: 600;
      font-size: 11.5pt;
      color: #2c3e50;
    }

    #resume-minimalist .duration {
      font-size: 9.5pt;
      color: #7f8c8d;
    }

    #resume-minimalist .company {
      font-size: 10pt;
      color: #7f8c8d;
      margin-bottom: 8px;
    }

    #resume-minimalist .experience-item ul {
      margin-left: 20px;
      margin-top: 8px;
    }

    #resume-minimalist .experience-item li {
      font-size: 10pt;
      line-height: 1.6;
      margin-bottom: 6px;
      color: #34495e;
    }

    /* Education */
    #resume-minimalist .education-item {
      margin-bottom: 15px;
    }

    #resume-minimalist .education-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 4px;
    }

    #resume-minimalist .institution {
      font-weight: 600;
      font-size: 11pt;
      color: #2c3e50;
    }

    #resume-minimalist .year {
      font-size: 9.5pt;
      color: #7f8c8d;
    }

    #resume-minimalist .degree {
      font-size: 10pt;
      color: #7f8c8d;
    }

    /* Projects */
    #resume-minimalist .project-item {
      margin-bottom: 20px;
    }

    #resume-minimalist .project-name {
      font-weight: 600;
      font-size: 11pt;
      color: #2c3e50;
      margin-bottom: 6px;
    }

    #resume-minimalist .project-item ul {
      margin-left: 20px;
      margin-top: 6px;
    }

    #resume-minimalist .project-item li {
      font-size: 10pt;
      line-height: 1.6;
      margin-bottom: 5px;
      color: #34495e;
    }

    /* Certifications */
    #resume-minimalist .cert-list {
      list-style: none;
      margin-left: 0;
    }

    #resume-minimalist .cert-list li {
      font-size: 10pt;
      margin-bottom: 8px;
      color: #34495e;
      padding-left: 15px;
      position: relative;
    }

    .cert-list li:before {
      content: "•";
      position: absolute;
      left: 0;
      color: #7f8c8d;
    }

    @media print {
      #resume-minimalist .page-break {
        page-break-before: always;
      }
    }
  </style>
</head>
<body>
  <div id="resume-minimalist">
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>{{personalInfo.name}}</h1>
      <div class="contact-info">
        {{personalInfo.phone}} • {{personalInfo.email}}{{#if personalInfo.linkedin}} • {{personalInfo.linkedin}}{{/if}}
      </div>
    </div>

    <!-- Profile/Summary -->
    {{#if summary}}
    <div class="section">
      <h2 class="section-title">Profile</h2>
      <p class="summary">{{summary}}</p>
    </div>
    {{/if}}

    <!-- Experience -->
    {{#if experience}}
    <div class="section">
      <h2 class="section-title">Experience</h2>
      {{#each experience}}
      <div class="experience-item">
        <div class="experience-header">
          <span class="job-title">{{title}}</span>
          <span class="duration">{{duration}}</span>
        </div>
        <div class="company">{{company}}</div>
        <ul>
          <li>{{description}}</li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Education -->
    {{#if education}}
    <div class="section">
      <h2 class="section-title">Education</h2>
      {{#each education}}
      <div class="education-item">
        <div class="education-header">
          <span class="institution">{{institution}}</span>
          <span class="year">{{year}}</span>
        </div>
        <div class="degree">{{degree}}</div>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Skills -->
    {{#if skills}}
    <div class="section">
      <h2 class="section-title">Skills</h2>
      <div class="skills-grid">
        {{#each skills}}
        <span class="skill-tag">{{this}}</span>
        {{/each}}
      </div>
    </div>
    {{/if}}

    <!-- Projects -->
    {{#if projects}}
    <div class="section">
      <h2 class="section-title">Projects</h2>
      {{#each projects}}
      <div class="project-item">
        <div class="project-name">{{name}}</div>
        <ul>
          <li>{{description}}</li>
          {{#if technologies}}
          <li>Technologies: {{technologies}}</li>
          {{/if}}
        </ul>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Certifications -->
    {{#if certifications}}
    <div class="section">
      <h2 class="section-title">Certifications</h2>
      <ul class="cert-list">
        {{#each certifications}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
    {{/if}}
  </div>
  </div>
</body>
</html>
